<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/re_img"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivTopImage"
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:src="@drawable/hill"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tvdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day"
        android:textSize="25dp"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="150dp" />
    <TextView
        android:id="@+id/tvday1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:padding="8dp"
        android:text="Date"
        android:layout_below="@+id/tvdate"/>


    <LinearLayout
    android:id="@+id/llet"
    android:layout_below="@+id/ivTopImage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Update task"
          android:textSize="18sp"
          android:textColor="#7f1313"
          android:layout_marginLeft="12dp"/>


    <EditText
        android:id="@+id/et_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="Subject"
        android:maxLines="1"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/et_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:maxLines="1"
        android:singleLine="true"
        android:focusable="false"
        android:hint="date"/>



   <!--- <EditText
        android:id="@+id/et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="id"
        android:layout_margin="12dp"/>-->

    <!--<EditText
        android:id="@+id/et_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Done"
        android:layout_margin="12dp"/>-->





    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_calander"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_calender"
        android:background="@android:color/transparent"
        android:layout_below="@+id/ivTopImage"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="24dp"
    />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_check"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_check_black_24dp"
        android:tint="@android:color/white"

        />


</RelativeLayout>